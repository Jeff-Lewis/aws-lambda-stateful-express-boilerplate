{
  "name": "aws-lambda-stateful-express-boilerplate",
  "version": "1.0.0",
  "url": "https://github.com/rafaelrpinto/aws-lambda-stateful-express-boilerplate",
  "scripts": {
    "start": "NODE_ENV=development nodemon -e js,hbs --watch ./lib ./lib/server/bin/www --exec 'npm run build-dev'",
    "build-dev": "rm -rf .dist/* && webpack --progress --profile --colors && babel-node",
    "build-prod": "rm -rf .dist/* && webpack --progress --profile --colors && babel lib --ignore lib/client -d .dist --copy-files",
    "deploy": "npm run build-prod && claudia create --handler lambda.handler --deploy-proxy-api --region eu-west-2 --policies policies --memory 1024 --profile default --set-env NODE_ENV=production",
    "update": "npm run build-prod && claudia update",
    "destroy": "claudia destroy"
  },
  "dependencies": {
    "aws-serverless-express": "^3.0.2",
    "body-parser": "~1.17.1",
    "connect-dynamodb": "git://github.com/rafaelrpinto/connect-dynamodb.git#master",
    "csurf": "^1.9.0",
    "express": "~4.15.2",
    "express-session": "^1.15.3",
    "faker": "^4.1.0",
    "hbs": "~4.0.1",
    "helmet": "^3.6.1",
    "memory-cache": "^0.1.6"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "aws-sdk": "^2.72.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-target": "0.0.5",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "nodemon": "^1.11.0",
    "webpack": "^3.0.0"
  },
  "files": [
    ".dist",
    "lambda.js",
    "lib"
  ]
}
